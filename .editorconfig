# EditorConfig
# https://editorconfig.org

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C/C++ files
[*.{c,h,cpp,hpp,cc,hh,cxx,hxx}]
indent_size = 4

# CMake files
[CMakeLists.txt]
indent_size = 4

[*.cmake]
indent_size = 4

# Python files (ESP-IDF tools)
[*.py]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# YAML files (CI/CD)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Protobuf files
[*.proto]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

